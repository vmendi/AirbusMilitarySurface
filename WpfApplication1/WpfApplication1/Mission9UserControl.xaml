             mc:Ignorable="d" 
             d:DesignHeight="332" d:DesignWidth="825"
             Width="1280" Height="720">

    <!--this should go in all mission UserControls so we can use the same template for all milestone controls-->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MissionStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Image Source="missionBackgrounds/background9.png" Stretch="Fill"/>

        <local:MissionMilestoneThumbnailUserControl HorizontalAlignment="Left" VerticalAlignment="Top" Margin="630,387,0,0"  Id="1"  ReverseId="True"
                                                    ThumbDescription="THE A400Ms LAND ON SHORT AND UNPAVED AIRSTRIPS"
                                                    ThumbType="???"
                                                    ThumbImage="missionMilestoneMedia/mission9/milestone0Thumbnail.png"
                                                    PopupTitle="MILITARY WITHDRAWAL"
                                                    PopupSubtitle="1. THE A400Ms LAND ON SHORT AND UNPAVED AIRSTRIPS"
                                                    PopupMediaFile="missionMilestoneMedia/mission9/MILITARYWITHDRAWAL-01-LandShortAirstrip.wmv"
                                                    PopupDescriptionHeading="GOOD TACTICAL PERFORMANCE COMBINED WITH THE ABILITY TO CARRY OUTSIZE AND HEAVY LOADS"
                                                    PopupDescriptionBody="Two VAB armoured personnel carriers are quickly loaded on board the A400M through the rear ramp. The A400M with 25 tonnes/55100 lb on board needs a distance of only 2500ft (750m) to take-off. Operating on a sand soft surface, the A400M can deliver up to a cumulative payload of 1000 tonnes (over 2.2 million pounds) before the sand surface deteriorates." />

        <local:MissionMilestoneThumbnailUserControl HorizontalAlignment="Left" VerticalAlignment="Top" Margin="780,308,0,0"  Id="2"  ReverseId="True"
